<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spnStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"/>

        <Button
            android:id="@+id/btnSeeStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See selected student" />

        <TextView
            android:id="@+id/txtStudUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginBottom="34dp"/>

        <TextView
            android:id="@+id/txtStudPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:text="Password" />

        <TextView
            android:id="@+id/txtAdminUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginBottom="34dp"/>

        <TextView
            android:id="@+id/txtAdminPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginBottom="34dp"/>

        <TextView
            android:id="@+id/txtIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Index"
            android:layout_marginBottom="34dp"/>

        <TextView
            android:id="@+id/txtJmbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JMBG"
            android:layout_marginBottom="34dp"/>/>

        <Spinner
            android:id="@+id/spnSubjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to loigin" />/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>